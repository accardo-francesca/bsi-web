		</dependency>

	</dependencies>
	<distributionManagement>
		<repository>
			<id>SignSDK</id>
			<name>Innovery SignSDK Releases</name>
			<url>http://developers.innovery.net/artifactory/signsdk-release</url>
		</repository>
	</distributionManagement>
	<repositories>
		<repository>
			<id>InnoPublic</id>
